#! /usr/bin/env python

import getopt
import re
import sys

from subprocess import call, check_output
from utils.help import man
from utils.messages import version, error, usage


def fixup(commit, body):
    '''Create a fixup commit using a given commit's subject and optional body'''

    last_commit_message = check_output(['git', 'show', '--no-patch', '--format=%s', commit]).splitlines()[0]
    commit_message = last_commit_message if re.match('^fixup!.*$', last_commit_message) is not None else 'fixup! ' + last_commit_message

    commit_command = ['git', 'commit', '--quiet', '-m', commit_message]
    if body is not None:
        commit_command += ['-m', body]
    call(commit_command)


def main(argv):
    try:
        opts, left_args = getopt.getopt(argv, 'hvb:', ['help', 'version', 'body='])
    except getopt.GetoptError as e:
        error(e.msg, exit=False)
        usage(['git fixup (-b |--body=)<message>', 'git fixup (-h|--help)', 'git fixup (-v|--version)'])

    body = None
    for opt, arg in opts:
        if opt in ('-h', '--help'):
            man()
        elif opt in ('-v', '--version'):
            version('0.1.0')
        elif opt in ('-b', '--body'):
            body = arg

    commit = left_args[0] if len(left_args) > 0 else 'HEAD'
    fixup(commit, body)

if __name__ == "__main__":
    main(sys.argv[1:])
